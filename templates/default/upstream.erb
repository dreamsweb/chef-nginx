upstream <%=@node[:nginx][:upstream][:name]%> {
  server unix:/home/apps/<%=@node[:nginx][:upstream][:app_name]%>/shared/tmp/sockets/unicorn.sock fail_timeout=0;
}
server {
  listen 80;
  server_name www.<%=@node[:nginx][:upstream][:server_name]%>;
  return 301 http://<%=@node[:nginx][:upstream][:server_name]%>$request_uri;
}

server {
  listen 80;
  client_max_body_size 1G;
  server_name <%=@node[:nginx][:upstream][:server_name]%>;

  keepalive_timeout 5;

  access_log  /var/log/nginx/<%=@node[:nginx][:upstream][:server_name]%>.access.log;
  error_log  /var/log/nginx/<%=@node[:nginx][:upstream][:server_name]%>.error.log;

  root /home/apps/<%=@node[:nginx][:upstream][:app_name]%>/current/public;

  try_files $uri/index.html $uri.html $uri @<%=@node[:nginx][:upstream][:name]%>;

  location @<%=@node[:nginx][:upstream][:name]%> {
    proxy_pass http://<%=@node[:nginx][:upstream][:name]%>;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    if (!-f $request_filename) {
      proxy_pass http://<%=@node[:nginx][:upstream][:name]%>;
      break;
    }
   }

  error_page 500 502 503 504 /500.html;
  location = /500.html {
    root /home/apps/<%=@node[:nginx][:upstream][:app_name]%>/current/public;
  }
}